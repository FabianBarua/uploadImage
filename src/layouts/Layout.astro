---
import Logo from "../components/Logo.astro";
import ThemeSwitch from "../components/ThemeSwitch.astro";
import { ViewTransitions } from "astro:transitions";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <title>{title}</title>

    <style is:global>
      input[type="file"] {
        display: none;
      }
    </style>
  </head>
  <body
    class="min-h-dvh bg-fondo dark:bg-fondoDark flex flex-col dark:font-white dark"
  >
    <header
      class="flex items-center justify-between px-12 py-5 border-b border-grayBorder dark:border-grayBorderDark dark:bg-fondoDark"
    >
      <a href="/">
        <Logo />
      </a>

      <ThemeSwitch />
    </header>
    <main
      class="flex-1 flex flex-col justify-center items-center bg-fondo dark:bg-fondoDark"
    >
      <slot />
    </main>
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap");

      input {
        display: none;
      }
    </style>
  </body>
</html>
